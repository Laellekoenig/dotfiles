// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace",
    "bindings": {
      // "shift shift": "file_finder::Toggle"
      //
    }
  },
  {
    "context": "Editor && vim_mode == insert",
    "bindings": {
      // "j k": "vim::NormalBefore"
    }
  },
  {
    "context": "Editor && vim_mode == normal",
    "bindings": {
      "space f p": "editor::GoToDiagnostic",
      "space f f": "file_finder::Toggle",
      "space f b": "buffer_search::Deploy",
      "space f g": "workspace::NewSearch",
      "space w v": "pane::SplitVertical",
      "space w h": "pane::SplitHorizontal",
      "space w d": "pane::CloseAllItems",
      "space w m": ["workspace::SendKeystrokes", ": o n l y enter"],
      "space 1": ["pane::ActivateItem", 0],
      "space 2": ["pane::ActivateItem", 1],
      "space 3": ["pane::ActivateItem", 2],
      "space 4": ["pane::ActivateItem", 3],
      "space 5": ["pane::ActivateItem", 4],
      "space 6": ["pane::ActivateItem", 5],
      "space 7": ["pane::ActivateItem", 6],
      "space 8": ["pane::ActivateItem", 7],
      "space h": ["workspace::SendKeystrokes", "ctrl-w h"],
      "space j": ["workspace::SendKeystrokes", "ctrl-w j"],
      "space k": ["workspace::SendKeystrokes", "ctrl-w k"],
      "space l": ["workspace::SendKeystrokes", "ctrl-w l"],
      "c a": "editor::ToggleCodeActions"
    }
  }
]
